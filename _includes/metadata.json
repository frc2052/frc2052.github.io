
{
  "@context": "https://schema.org",
  "@type": "WebPage",
  "name": "{% if page.title %}{{ page.title | escape }}{% else %}{{ site.title | escape }}{% endif %}",
  "mainEntityOfPage": "{{ page.url | replace:'index.html','' | prepend: site.url }}",
  "url": "{{ page.url | replace:'index.html','' | prepend: site.url }}",
  "description": "{% if page.excerpt %}{{ page.excerpt | strip_html | strip_newlines | truncate: 160 }}{% else %}{{ site.description }}{% endif %}",
  "dateModified": "{% if page.date %}{{ page.date | date_to_xmlschema }}{% else %}{{ site.time | date_to_xmlschema }}{% endif %}",
  "inLanguage": "en",
  "publisher": {
    "@type": "Organization",
    "name": "{{ site.title }}",
    "logo": {
      "@type": "ImageObject",
      "url": "{{ site.url }}{{ site.logo }}",
      "width": 192,
      "height": 192
    }
  },
  "image": {
    "@type": "ImageObject",
    "url": "{{ site.url }}{{ site.logo }}",
    "width": 192,
    "height": 192
  },
  "breadcrumb": {
    "@type": "BreadcrumbList",
    "itemListElement": [
      {
        "@type": "ListItem",
        "position": 1,
        "name": "Home",
        "item": "{{ site.url }}"
      },
      {
        "@type": "ListItem",
        "position": 2,
        "name": "{{ page.title }}",
        "item": "{{ page.url | prepend: site.url }}"
      }
    ]
  }  
}
